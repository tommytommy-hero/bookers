<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<%= form_with model:@book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>

<% end %>
